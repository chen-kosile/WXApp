.wux-badge {
    position: relative;
    display: inline-block;
    line-height: 1;
    vertical-align: middle;
}
.wux-badge__count {
    position: absolute;
    transform: translateX(50%);
    transform-origin: -10% center;
    top: -12rpx;
    right: 0;
    height: 36rpx;
    border-radius: 18rpx; /*设置为高度的一半*/
    min-width: 36rpx;
    background: #ed3f14;
    color: #ffffff;
    line-height: 36rpx;
    text-align: center;
    font-size: 24rpx;
    white-space: nowrap; /* 文字不要换行*/
    z-index: 10;
    box-shadow: 0 0 0 2rpx #ffffff;
    box-sizing: border-box;
    text-rendering: optimizeLegibility; /*文字优化属性，抗锯齿*/
}